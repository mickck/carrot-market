// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  //@id is id of the model autoincrement
  phone     BigInt?     @unique
  email     String?  @unique
  name      String
  avatar    String?
  // url also is string
  createdAt DateTime @default(now())
  // put a time when you make
  updatedAt DateTime @updatedAt
  //@updatedAt lets prisma know when users update this field
  tokens    Token[]
}

model Token {
  id        Int      @id @default(autoincrement())
  payload   String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  //Casecade- Delete the child records when the parent record is deleted.
  //setNull - value of user changes null, leave the token
  userId    Int
  createdAt DateTime @default(now())
  pdatedAt  DateTime @updatedAt

  @@index([userId])
}

